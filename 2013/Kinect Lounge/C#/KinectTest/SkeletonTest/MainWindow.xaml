<Window x:Class="SkeletonTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="480" Width="640" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Viewbox Grid.Row="1" Stretch="Uniform" HorizontalAlignment="Center">
            <Image Name="Image" Width="640" Height="480"/>
        </Viewbox>
        <Button Grid.Row="2" Content="Screenshot" Height="Auto" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10 10 0 10" Name="buttonScreenshot" Click="ButtonScreenshotClick" />
    </Grid>
</Window>
